<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Primary2"
    tools:context=".SignInActivity">

    <EditText
        android:id="@+id/name"
        style="@android:style/Widget.EditText"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/pt_mono"
        android:hint="Имя"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/PrimaryTextWhite"
        android:textColorHighlight="@color/Primary3"
        android:textColorHint="@color/PrimaryTextWhite"
        android:textColorLink="@color/Primary3"
        android:textCursorDrawable="@color/Primary3"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textColor="@color/PrimaryTextWhite"
        android:textSize="50sp"
        android:textStyle="normal"
        app:fontFamily="@font/russo_one"
        android:text="Давайте знакомиться!" />

    <EditText
        android:id="@+id/e_mail"
        style="@android:style/Widget.EditText"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/pt_mono"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/PrimaryTextWhite"
        android:textColorHighlight="@color/Primary3"
        android:textColorHint="@color/PrimaryTextWhite"
        android:textColorLink="@color/Primary3"
        android:textCursorDrawable="@color/Primary3"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/password"
        style="@android:style/Widget.EditText"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/e_mail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:fontFamily="@font/pt_mono"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/PrimaryTextWhite"
        android:textColorHighlight="@color/Primary3"
        android:textColorHint="@color/PrimaryTextWhite"
        android:textColorLink="@color/Primary3"
        android:textCursorDrawable="@color/Primary3"
        android:textSize="30sp" />

    <Button
        android:id="@+id/sign_in_button"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/pt_mono"
        android:text="Создать аккаунт"
        android:textColor="@color/Primary3"
        android:textSize="30sp" />
</RelativeLayout>